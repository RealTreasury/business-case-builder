{
    "name": "real-treasury-business-case-builder",
    "version": "2.1.0",
    "description": "Professional-grade ROI calculator and comprehensive business case generator for treasury technology with advanced analysis and consultant-style reports.",
    "main": "index.js",
    "scripts": {
        "wp-env:start": "wp-env start",
        "wp-env:stop": "wp-env stop",
        "wp-env:destroy": "wp-env destroy",
        "wp-env:clean": "wp-env clean",
        "wp-env:logs": "wp-env logs",
        "wp-env:cli": "wp-env run cli",
        "wp-env:tests-cli": "wp-env run tests-cli",
        "test": "npm run test:php && npm run test:js",
        "test:php": "composer test",
        "test:php:unit": "composer run test:unit",
        "test:php:integration": "composer run test:integration",
        "test:js": "node tests/run-js-tests.js",
        "test:e2e": "cypress run",
        "test:e2e:open": "cypress open",
        "test:e2e:ci": "start-server-and-test wp-env:start http://localhost:8888 'cypress run --config video=false'",
        "lint": "npm run lint:php && npm run lint:js",
        "lint:php": "composer run cs:check",
        "lint:js": "eslint admin/js/ public/js/ --ext .js",
        "lint:fix": "npm run lint:php:fix && npm run lint:js:fix",
        "lint:php:fix": "composer run cs:fix",
        "lint:js:fix": "eslint admin/js/ public/js/ --ext .js --fix",
        "build": "npm run build:production",
        "build:production": "node scripts/build-plugin-zip.js",
        "build:dev": "echo 'No build step required for development'",
        "compat:check": "composer run compat:check",
        "setup": "npm run setup:composer && npm run setup:wp-env",
        "setup:composer": "composer install",
        "setup:wp-env": "npm run wp-env:start",
        "setup:tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest",
        "clean": "npm run wp-env:clean && rm -rf node_modules vendor coverage cypress/videos cypress/screenshots",
        "precommit": "npm run lint && npm run test:php",
        "prepare": "npm run setup:composer"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/RealTreasury/business-case-builder.git"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "treasury",
        "roi",
        "business-case",
        "calculator"
    ],
    "author": "Real Treasury",
    "license": "GPL-2.0-or-later",
    "bugs": {
        "url": "https://github.com/RealTreasury/business-case-builder/issues"
    },
    "homepage": "https://github.com/RealTreasury/business-case-builder#readme",
    "devDependencies": {
        "@wordpress/env": "^10.29.0",
        "@wordpress/eslint-plugin": "^17.3.0",
        "@wordpress/scripts": "^30.22.0",
        "cypress": "^13.6.0",
        "eslint": "^8.55.0",
        "start-server-and-test": "^2.0.3",
        "archiver": "^6.0.1"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "browserslist": [
        "extends @wordpress/browserslist-config"
    ]
}